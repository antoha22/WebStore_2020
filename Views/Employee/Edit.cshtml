@model EmployeeViewModel;

@{
    ViewData["Title"] = "Редактирование сотрудника";
    Layout = null;
 }

<span>Сотрудник</span>
<div class="editableEmployee">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="SecondName" class="control-label"></label>
            <input asp-for="SecondName" class="form-control" />
            <span asp-validation-for="SecondName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Patronymic" class="control-label"></label>
            <input asp-for="Patronymic" class="form-control" />
            <span asp-validation-for="Patronymic"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position" class="control-label"></label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
        <a asp-action="Index">Список сотрудников</a>
    </form>
</div>