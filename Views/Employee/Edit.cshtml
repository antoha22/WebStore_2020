@model EmployeeViewModel;

@{
    ViewData["Title"] = "Редактирование сотрудника";
    Layout = null;
 }

<span>Сотрудник</span>
<div class="editableEmployee">
    <form asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SecondName" class="control-label"></label>
            <input asp-for="SecondName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Patronymic" class="control-label"></label>
            <input asp-for="Patronymic" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Position" class="control-label"></label>
            <input asp-for="Position" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
        <a asp-action="Index">Список сотрудников</a>
    </form>
</div>