@model IEnumerable<EmployeeViewModel>
@{
    Layout = null;
    ViewData["Title"] = "Index";
}

<h1>Hello from my first view</h1>
<a asp-action="Edit" class="btn-success">Добавить пользователя в список.</a>

<table class="table">
@foreach (var item in Model) 
{
    <tr>
        <td><a asp-action="Edit" asp-route-id="@item.Id">Редактировать пользователя<i class="fa fa-edit"></i></a></td>
        <td>@item.FirstName</td>
        <td>@item.SecondName</td>
        <td>@item.Patronymic</td>
        <td>
            @Html.ActionLink("Детали", "Details", new { id = item.Id });
        </td>
        <td><a asp-action="Delete" asp-route-id="@item.Id">Удалить из списка</a></td>
    </tr>
}
</table>>

