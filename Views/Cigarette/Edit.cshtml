@model Ciggarets;

@{
    ViewData["Title"] = "Редактирование сигарет";
    Layout = null;
}

<span>Сигареты</span>
<div class="editableEmployee">
    <form asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Label" class="control-label"></label>
            <input asp-for="Label" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Model" class="control-label"></label>
            <input asp-for="Model" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Cost" class="control-label"></label>
            <input asp-for="Cost" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PickUrl" class="control-label"></label>
            <input asp-for="PickUrl" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
        <a asp-action="Index">Список сигарет</a>
    </form>
</div>